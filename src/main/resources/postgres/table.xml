    <bean name="table,tbl,t" parent="parentSchemaObjectBean">
        <property name="name" value="table" />
        <property name="aliases" value="table,tbl,t" />
        <property name="child">
            <list>
                <!--<value>#{column}</value>-->
                <!--<value>#{index}</value>-->
