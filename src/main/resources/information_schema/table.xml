<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
       profile="information_schema">

    <bean id="container" class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeContainer">
        <property name="types">
            <list>
                <value>#{table}</value>
                <value>#{column}</value>
                <value>#{pk}</value>
            </list>
        </property>
    </bean>

    <bean name="table,tbl,t" parent="parentSchemaObjectBean">
        <property name="name" value="table" />
        <property name="child">
            <list>
                <value>#{column}</value>
                <value>#{pk}</value>
            </list>
        </property>
        <property name="readers">
            <list>
                <bean parent="baseSqlReader">
                    <property name="sql" value="${tables}" />
                </bean>
            </list>
        </property>
        <property name="commands">
            <list>
                <bean parent="parentTemplateGeneratorBean">
                    <property name="template" value="${table.create}" />
                </bean>
                <bean parent="parentTemplateGeneratorBean">
                    <property name="DBSchemaObjectCommand" ref="DROP" />
                    <property name="template" value="${table.drop}" />
                </bean>
            </list>
        </property>
    </bean>


    <bean name="column,clmn,c" parent="parentSchemaObjectBean">
        <property name="name" value="column" />
        <property name="readers">
            <list>
                <bean name="sqlReader" parent="baseSqlReader">
                    <property name="sql" value="${table.columns}" />
                </bean>
            </list>
        </property>
        <property name="commands">
            <list>
                <bean parent="parentTemplateGeneratorBean">
                    <property name="template" value="${table.column.create}" />
                </bean>
                <bean parent="parentTemplateGeneratorBean">
                    <property name="DBSchemaObjectCommand" ref="DROP" />
                    <property name="template" value="${table.column.drop}" />
                </bean>
            </list>
        </property>
    </bean>

    <bean name="pk,primary,primary_key" parent="parentSchemaObjectBean">
        <property name="name" value="pk" />
        <property name="readers">
            <list>
                <bean name="sqlReader" parent="baseSqlReader">
                    <property name="sql" value="${table.pk}" />
                </bean>
            </list>
        </property>
        <property name="commands">
            <list>
                <bean parent="parentTemplateGeneratorBean">
                    <property name="template" value="${table.pk.create}" />
                </bean>
                <bean parent="parentTemplateGeneratorBean">
                    <property name="DBSchemaObjectCommand" ref="DROP" />
                    <property name="template" value="${table.pk.drop}" />
                </bean>
            </list>
        </property>
    </bean>

</beans>