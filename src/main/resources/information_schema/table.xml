<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
       profile="information_schema">


    <bean name="table" parent="parentSchemaObjectBean">
        <property name="name" value="table" />
        <property name="aliases" value="table,tbl,t" />
        <property name="child">
            <list>
                <value>#{column}</value>
                <value>#{pk}</value>
                <value>#{fk}</value>
                <value>#{index}</value>
                <value>#{check}</value>
            </list>
        </property>
        <property name="readers">
            <bean parent="baseSqlReader" c:sql="${tables}" />
        </property>
        <property name="aggregators">
            <list>
                <bean class="com.github.mgramin.sqlboot.model.DbSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="sql,zip"/>
                    <property name="commands">
                        <list>
                            <bean parent="plainTextTemplateGenerator" c:baseText='${table.sql.create}' />
                            <bean parent="plainTextTemplateGenerator" c:baseText='${table.sql.drop}' c:command-ref='DROP' />
                        </list>
                    </property>
                </bean>
                <bean class="com.github.mgramin.sqlboot.model.DbSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="html"/>
                    <property name="commands">
                        <bean parent="plainTextMarkupTemplateGenerator" c:baseText='${table.info}' />
                    </property>
                </bean>
                <bean class="com.github.mgramin.sqlboot.model.DbSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="migration"/>
                    <property name="commands">
                        <list>
                            <bean parent="plainTextMarkupTemplateGenerator" c:baseText='${table.migrate.create}' />
                            <bean parent="plainTextMarkupTemplateGenerator" c:baseText='${table.migrate.drop}' c:command-ref='DROP' />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean name="column" parent="parentSchemaObjectBean">
        <property name="name" value="column" />
        <property name="aliases" value="column,clmn,c" />
        <property name="readers">
            <bean parent="baseSqlReader" c:sql="${table.columns}" />
        </property>
        <property name="aggregators">
            <list>
                <bean class="com.github.mgramin.sqlboot.model.DbSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="sql"/>
                    <property name="commands">
                        <list>
                            <bean parent="plainTextTemplateGenerator" c:baseText='${table.column.sql.create}' />
                            <bean parent="plainTextTemplateGenerator" c:baseText='${table.column.sql.drop}' c:command-ref='DROP' />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean name="pk" parent="parentSchemaObjectBean">
        <property name="name" value="pk" />
        <property name="aliases" value="pk,primary,primary_key" />
        <property name="readers">
            <bean parent="baseSqlReader" c:sql="${table.pk}" />
        </property>
        <property name="aggregators">
            <list>
                <bean class="com.github.mgramin.sqlboot.model.DbSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="sql,zip"/>
                    <property name="commands">
                        <list>
                            <bean parent="plainTextTemplateGenerator" c:baseText='${table.pk.sql.create}' />
                            <bean parent="plainTextTemplateGenerator" c:baseText='${table.pk.sql.drop}' c:command-ref='DROP' />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean name="fk" parent="parentSchemaObjectBean">
        <property name="name" value="fk" />
        <property name="aliases" value="fk,foreign,foreign_key" />
        <property name="readers">
            <bean parent="baseSqlReader" c:sql="${table.fk}" />
        </property>
        <property name="aggregators">
            <list>
                <bean class="com.github.mgramin.sqlboot.model.DbSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="sql,zip"/>
                    <property name="commands">
                        <list>
                            <bean parent="plainTextTemplateGenerator" c:baseText='${table.fk.sql.create}'/>
                            <bean parent="plainTextTemplateGenerator" c:baseText='${table.fk.sql.drop}' c:command-ref='DROP' />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean name="index" parent="parentSchemaObjectBean">
        <property name="name" value="index" />
        <property name="aliases" value="index,idx" />
        <property name="readers">
            <bean parent="baseSqlReader" c:sql="${table.indexes}" />
        </property>
        <property name="aggregators">
            <list>
                <bean class="com.github.mgramin.sqlboot.model.DbSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="sql,zip"/>
                    <property name="commands">
                        <list>
                            <bean parent="plainTextTemplateGenerator" c:baseText='${table.index.sql.create}' />
                            <bean parent="plainTextTemplateGenerator" c:baseText='${table.index.sql.drop}' c:command-ref='DROP' />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean name="check" parent="parentSchemaObjectBean">
        <property name="name" value="check" />
        <property name="aliases" value="check,chk" />
        <property name="readers">
            <bean parent="baseSqlReader" c:sql="${table.checks}" />
        </property>
        <property name="aggregators">
            <list>
                <bean class="com.github.mgramin.sqlboot.model.DbSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="sql,zip"/>
                    <property name="commands">
                        <list>
                            <bean parent="plainTextTemplateGenerator" c:baseText='${table.check.sql.create}' />
                            <bean parent="plainTextTemplateGenerator" c:baseText='${table.check.sql.drop}' c:command-ref='DROP' />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>