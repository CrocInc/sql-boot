<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
       profile="information_schema">



    <bean name="table,tbl,t" parent="parentSchemaObjectBean">
        <property name="name" value="table" />
        <property name="child">
            <list>
                <value>#{column}</value>
                <value>#{pk}</value>
                <!--<value>#{fk}</value>-->
                <value>#{index}</value>
                <value>#{check}</value>
            </list>
        </property>
        <property name="readers">
            <list>
                <bean parent="baseSqlReader">
                    <property name="sql" value="${tables}" />
                </bean>
            </list>
        </property>
        <property name="aggregators">
            <list>
                <bean class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="sql"/>
                    <property name="commands">
                        <list>
                            <bean parent="parentTemplateGeneratorBean">
                                <property name="template" value="${table.sql.create}" />
                            </bean>
                            <bean parent="parentTemplateGeneratorBean">
                                <property name="DBSchemaObjectCommand" ref="DROP" />
                                <property name="template" value="${table.sql.drop}" />
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="html"/>
                    <property name="commands">
                        <list>
                            <bean parent="parentTemplateGeneratorBean">
                                <property name="DBSchemaObjectCommand" ref="CREATE" />
                                <property name="templateEngine" ref="markupTemplateEngine" />
                                <property name="template" value="${table.info}" />
                            </bean>
                        </list>
                    </property>
                </bean>

                <bean class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="liquibase"/>
                    <property name="commands">
                        <list>
                            <bean parent="parentTemplateGeneratorBean">
                                <property name="templateEngine" ref="markupTemplateEngine" />
                                <property name="template" value="${table.migrate.create}" />
                            </bean>
                            <bean parent="parentTemplateGeneratorBean">
                                <property name="DBSchemaObjectCommand" ref="DROP" />
                                <property name="templateEngine" ref="markupTemplateEngine" />
                                <property name="template" value="${table.migrate.drop}" />
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="zip"/>
                    <property name="commands">
                        <list>
                            <bean parent="parentTemplateGeneratorBean">
                                <property name="template" value="${table.sql.create}" />
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean name="column,clmn,c" parent="parentSchemaObjectBean">
        <property name="name" value="column" />
        <property name="readers">
            <list>
                <bean name="sqlReader" parent="baseSqlReader">
                    <property name="sql" value="${table.columns}" />
                </bean>
            </list>
        </property>
        <property name="aggregators">
            <list>
                <bean class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="sql"/>
                    <property name="commands">
                        <list>
                            <bean parent="parentTemplateGeneratorBean">
                                <property name="template" value="${table.column.sql.create}" />
                            </bean>
                            <bean parent="parentTemplateGeneratorBean">
                                <property name="DBSchemaObjectCommand" ref="DROP" />
                                <property name="template" value="${table.column.sql.drop}" />
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean name="pk,primary,primary_key" parent="parentSchemaObjectBean">
        <property name="name" value="pk" />
        <property name="readers">
            <list>
                <bean name="sqlReader" parent="baseSqlReader">
                    <property name="sql" value="${table.pk}" />
                </bean>
            </list>
        </property>
        <property name="aggregators">
            <list>
                <bean class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="sql"/>
                    <property name="commands">
                        <list>
                            <bean parent="parentTemplateGeneratorBean">
                                <property name="template" value="${table.pk.sql.create}" />
                            </bean>
                            <bean parent="parentTemplateGeneratorBean">
                                <property name="DBSchemaObjectCommand" ref="DROP" />
                                <property name="template" value="${table.pk.sql.drop}" />
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean name="index,idx" parent="parentSchemaObjectBean">
        <property name="name" value="index" />
        <property name="readers">
            <list>
                <bean name="sqlReader" parent="baseSqlReader">
                    <property name="sql" value="${table.indexes}" />
                </bean>
            </list>
        </property>
        <property name="aggregators">
            <list>
                <bean class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="sql"/>
                    <property name="commands">
                        <list>
                            <bean parent="parentTemplateGeneratorBean">
                                <property name="template" value="${table.index.sql.create}" />
                            </bean>
                            <bean parent="parentTemplateGeneratorBean">
                                <property name="DBSchemaObjectCommand" ref="DROP" />
                                <property name="template" value="${table.index.sql.drop}" />
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean name="check,chk" parent="parentSchemaObjectBean">
        <property name="name" value="check" />
        <property name="readers">
            <list>
                <bean name="sqlReader" parent="baseSqlReader">
                    <property name="sql" value="${table.checks}" />
                </bean>
            </list>
        </property>
        <property name="aggregators">
            <list>
                <bean class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="sql"/>
                    <property name="commands">
                        <list>
                            <bean parent="parentTemplateGeneratorBean">
                                <property name="template" value="${table.check.sql.create}" />
                            </bean>
                            <bean parent="parentTemplateGeneratorBean">
                                <property name="DBSchemaObjectCommand" ref="DROP" />
                                <property name="template" value="${table.check.sql.drop}" />
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>