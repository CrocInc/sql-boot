<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
       profile="information_schema">


    <bean name="table" parent="parentSchemaObjectBean">
        <property name="name" value="table" />
        <property name="aliases" value="table,tbl,t" />
        <property name="child">
            <list>
                <value>#{column}</value>
                <value>#{pk}</value>
                <value>#{fk}</value>
                <value>#{index}</value>
                <value>#{check}</value>
            </list>
        </property>
        <property name="readers">
            <bean parent="baseSqlReader">
                <property name="sql" value="${tables}" />
            </bean>
        </property>
        <property name="aggregators">
            <list>
                <bean class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="sql,zip"/>
                    <property name="commands">
                        <list>
                            <bean parent="templateGeneratorBean" c:template='${table.sql.create}' />
                            <bean parent="templateGeneratorBean" c:template='${table.sql.drop}' c:command-ref='DROP' />
                        </list>
                    </property>
                </bean>
                <bean class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="html"/>
                    <property name="commands">
                        <bean parent="templateMarkupGeneratorBean" c:template='${table.info}' />
                    </property>
                </bean>
                <bean class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="migration"/>
                    <property name="commands">
                        <list>
                            <bean parent="templateMarkupGeneratorBean" c:template='${table.migrate.create}' />
                            <bean parent="templateMarkupGeneratorBean" c:template='${table.migrate.drop}' c:command-ref='DROP' />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean name="column" parent="parentSchemaObjectBean">
        <property name="name" value="column" />
        <property name="aliases" value="column,clmn,c" />
        <property name="readers">
            <list>
                <bean name="sqlReader" parent="baseSqlReader">
                    <property name="sql" value="${table.columns}" />
                </bean>
            </list>
        </property>
        <property name="aggregators">
            <list>
                <bean class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="sql"/>
                    <property name="commands">
                        <list>
                            <bean parent="templateGeneratorBean" c:template='${table.column.sql.create}' />
                            <bean parent="templateGeneratorBean" c:template='${table.column.sql.drop}' c:command-ref='DROP' />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean name="pk" parent="parentSchemaObjectBean">
        <property name="name" value="pk" />
        <property name="aliases" value="pk,primary,primary_key" />
        <property name="readers">
            <bean name="sqlReader" parent="baseSqlReader">
                <property name="sql" value="${table.pk}" />
            </bean>
        </property>
        <property name="aggregators">
            <list>
                <bean class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="sql,zip"/>
                    <property name="commands">
                        <list>
                            <bean parent="templateGeneratorBean" c:template='${table.pk.sql.create}' />
                            <bean parent="templateGeneratorBean" c:template='${table.pk.sql.drop}' c:command-ref='DROP' />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean name="fk" parent="parentSchemaObjectBean">
        <property name="name" value="fk" />
        <property name="aliases" value="fk,foreign,foreign_key" />
        <property name="readers">
                <bean name="sqlReader" parent="baseSqlReader">
                    <property name="sql" value="${table.fk}" />
                </bean>
        </property>
        <property name="aggregators">
            <list>
                <bean class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="sql,zip"/>
                    <property name="commands">
                        <list>
                            <bean parent="templateGeneratorWrapper">
                                <constructor-arg name="baseGenerator">
                                    <bean parent="plainTextGenerator" c:baseText='${table.fk.sql.create}'/>
                                </constructor-arg>
                            </bean>
                            <bean parent="templateGeneratorBean" c:template='${table.fk.sql.drop}' c:command-ref='DROP' />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean name="index" parent="parentSchemaObjectBean">
        <property name="name" value="index" />
        <property name="aliases" value="index,idx" />
        <property name="readers">
            <list>
                <bean name="sqlReader" parent="baseSqlReader">
                    <property name="sql" value="${table.indexes}" />
                </bean>
            </list>
        </property>
        <property name="aggregators">
            <list>
                <bean class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="sql,zip"/>
                    <property name="commands">
                        <list>
                            <bean parent="templateGeneratorBean" c:template='${table.index.sql.create}' />
                            <bean parent="templateGeneratorBean" c:template='${table.index.sql.drop}' c:command-ref='DROP' />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean name="check" parent="parentSchemaObjectBean">
        <property name="name" value="check" />
        <property name="aliases" value="check,chk" />
        <property name="readers">
            <list>
                <bean name="sqlReader" parent="baseSqlReader">
                    <property name="sql" value="${table.checks}" />
                </bean>
            </list>
        </property>
        <property name="aggregators">
            <list>
                <bean class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="sql,zip"/>
                    <property name="commands">
                        <list>
                            <bean parent="templateGeneratorBean" c:template='${table.check.sql.create}' />
                            <bean parent="templateGeneratorBean" c:template='${table.check.sql.drop}' c:command-ref='DROP' />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>