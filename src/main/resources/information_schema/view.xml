<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
       profile="information_schema">


    <bean name="view" parent="parentSchemaObjectBean">
        <property name="name" value="view" />
        <property name="aliases" value="view,vw,v" />
        <property name="readers">
            <list>
                <bean parent="baseSqlReader">
                    <property name="sql" value="${views}" />
                </bean>
            </list>
        </property>
        <property name="aggregators">
            <list>
                <bean class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="sql"/>
                        <property name="commands">
                            <list>
                                <bean parent="templateGeneratorBean" c:template='${view.sql.create}' />
                                <bean parent="templateGeneratorBean" c:template='${view.sql.drop}' c:command-ref='DROP' />
                            </list>
                        </property>
                </bean>
                <!--<bean class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="zip"/>
                    <property name="commands">
                        <list>
                            <bean parent="templateGeneratorBean">
                                <property name="template" value="${view.sql.create}" />
                            </bean>
                        </list>
                    </property>
                </bean>-->
            </list>
        </property>
    </bean>


    <bean name="mview" parent="parentSchemaObjectBean">
        <property name="name" value="mview" />
        <property name="aliases" value="mview,mvw,mv,materialized_view" />
        <property name="child">
            <list>
                <value>#{column}</value>
            </list>
        </property>
        <property name="readers">
            <list>
                <bean parent="baseSqlReader">
                    <property name="sql" value="${mviews}" />
                </bean>
            </list>
        </property>
        <property name="aggregators">
            <list>
                <bean class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="sql"/>
                    <property name="commands">
                        <list>
                            <bean parent="templateGeneratorBean" c:template='${mview.sql.create}' />
                            <bean parent="templateGeneratorBean" c:template='${mview.sql.drop}' c:command-ref='DROP' />
                        </list>
                    </property>
                </bean>
                <!--<bean class="com.github.mgramin.sqlboot.model.DBSchemaObjectTypeAggregator">
                    <property name="aggregatorName" value="zip"/>
                    <property name="commands">
                        <list>
                            <bean parent="templateGeneratorBean">
                                <property name="template" value="${mview.sql.create}" />
                            </bean>
                        </list>
                    </property>
                </bean>-->
            </list>
        </property>
    </bean>

</beans>