<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean name="fsResourceTypes" class="com.github.mgramin.sqlboot.model.resource_types.impl.FsResourceTypes"
          c:dataSource-ref="dataSource" c:baseFolder="${base.config.folder}" />

    <!-- db resource type -->
    <bean id="dbResourceType" class="com.github.mgramin.sqlboot.model.resource_type.impl.ResourceType" abstract="true" />

    <bean name="jdbcResourceType" abstract="true"
          class="com.github.mgramin.sqlboot.model.resource_type.impl.jdbc.JdbcResourceType" />

    <bean name="jdbcSchema" class="com.github.mgramin.sqlboot.tools.jdbc.impl.Schema" c:dataSource-ref="dataSource" />
    <bean name="jdbcTable" class="com.github.mgramin.sqlboot.tools.jdbc.impl.Table" c:dataSource-ref="dataSource" />
    <bean name="jdbcPk" class="com.github.mgramin.sqlboot.tools.jdbc.impl.PrimaryKey" c:dataSource-ref="dataSource" />
    <bean name="jdbcColumn" class="com.github.mgramin.sqlboot.tools.jdbc.impl.Column" c:dataSource-ref="dataSource" />
    <bean name="jdbcFk" class="com.github.mgramin.sqlboot.tools.jdbc.impl.ForeignKey" c:dataSource-ref="dataSource" />
    <bean name="jdbcIndex" class="com.github.mgramin.sqlboot.tools.jdbc.impl.Index" c:dataSource-ref="dataSource" />
    <bean name="jdbcFunction" class="com.github.mgramin.sqlboot.tools.jdbc.impl.Function" c:dataSource-ref="dataSource" />
    <bean name="jdbcProcedure" class="com.github.mgramin.sqlboot.tools.jdbc.impl.Procedure" c:dataSource-ref="dataSource" />


    <!-- Template engines -->
    <bean id="templateGenerator" scope="prototype" class="com.github.mgramin.sqlboot.template.generator.impl.GroovyTemplateGenerator" />
    <bean id="markupTemplateEngine" scope="prototype" class="com.github.mgramin.sqlboot.template.generator.impl.GroovyMarkupTemplateGenerator" />

    <bean id="templateEngineFactory" class="com.github.mgramin.sqlboot.template.generator.factory.GroovyTemplateGeneratorFactory" />
    <bean id="markupTemplateEngineFactory" class="com.github.mgramin.sqlboot.template.generator.factory.GroovyMarkupTemplateGeneratorFactory" />

    <!-- DB helpers -->
    <bean id="sqlHelper" class="com.github.mgramin.sqlboot.sql.impl.JdbcSqlQuery" autowire="byType"/>

    <!-- Connection pool template -->
    <bean id="templateCP" class = "org.apache.tomcat.jdbc.pool.DataSource" destroy-method="close" abstract="true">
        <property name="validationQuery" value="select 1" />
        <property name="initialSize" value="5" />
        <property name="maxActive" value="10" />
        <property name="maxIdle" value="5" />
        <property name="minIdle" value="2" />
    </bean>

</beans>